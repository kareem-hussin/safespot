<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/safespot_orange</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <!-- Custom AlertDialog Theme -->
    <style name="CustomAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/safespot_orange</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/CustomPositiveButton</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/CustomNegativeButton</item>
    </style>

    <!-- Button Styles -->
    <style name="CustomPositiveButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/safespot_orange</item>
    </style>

    <style name="CustomNegativeButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/safespot_orange</item>
    </style>

    <style name="CustomListItemStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/mplus1pblack</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>
